.container{
  width: 100%;
  background: #eee;
}
.banner{
  width: 100vw;
  height: 41.6666666vw;
}
.banner-item{
  width: 100%;
  height: 100%;
}
.hot-box, .find-box, .videos-box{
  width: 100%;
  margin: 5px 0 0 0;
  background: #fff;
}
.hot, .find, .videos{
  width: 100%;
  height: 2em;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 1px 1px 1px rgba(0, 0, 0, 0.2);
}
.hot-title, .find-title, .videos-title{
  display: flex;
  align-items: center;
}
.hot-words, .find-words, .videos-words{
  height: 1em;
  line-height: 1em;
  font-size: 0.8em;
}
.tips{
  margin: 0 6px 0 15px;
  width: 3px;
  height: 0.8em;
  background: deepskyblue;
  display: inline-block;
}
.more{
  margin: 0 15px 0 0;
  height: 1em;
  line-height: 1em;
  font-size: 0.8em;
}
.hot-content{
  margin: 10px 15px;
  overflow: auto;
  border-radius: 5px;
  background: -webkit-linear-gradient(left, #2a579a, deepskyblue);
}
.hot-content-item{
  box-shadow: 1px 1px 1px rgba(30, 144, 255, 0.5), 1px -1px 1px rgba(30, 144, 255, 0.5), -1px 1px 1px rgba(30, 144, 255, 0.5); 
  padding: 10px 3vw;
}
.item-header{
  color: #fff;
  font-size: 0.8em;
}
.item-keyWords{
  margin-top: 15px;
  color: #fff;
}
.find-content{
  margin: 10px 15px;
}
.find-content-tips{
  text-indent: 2em;
  display: block;
  font-size: 0.8em;
  color: #aaa;
  margin: 10px 0;
}
.find-content-footer{
  display: flex;
  justify-content: space-between;
  margin: 0 15px;
  border-top: 1px solid rgba(0, 0, 0, 0.15);
  padding: 5px 0 10px 0;
  color: #aaa;
  font-size: 0.8em;
}
.hotMovie{
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
}
.hot-movie:nth-child(2n+1){
  margin: 10px 0 0 5vw;
  width: 42.5vw;
  border-radius: 5px;
}
.hot-movie:nth-child(2n+2){
  margin: 10px 5vw 0 0;
  width: 42.5vw;
  border-radius: 5px;
}
.videos-box{
  padding-bottom: 10px;
}